---
export interface Props {
	context: string;
}

const { context } = Astro.props;
---

<div class="scouting-context">
	<div class="context-header">
		<svg class="scout-icon" viewBox="0 0 24 24" fill="currentColor">
			<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
		</svg>
		<span>Scouting Impact</span>
	</div>
	<p class="context-text">{context}</p>
</div>

<style>
	.scouting-context {
		background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
		border: 2px solid #f59e0b;
		border-radius: 12px;
		padding: 1.5rem;
		margin: 2rem 0;
		position: relative;
	}

	.context-header {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1rem;
		font-weight: 600;
		color: #92400e;
		font-size: 1.1rem;
	}

	.scout-icon {
		width: 1.5rem;
		height: 1.5rem;
	}

	.context-text {
		margin: 0;
		color: #78350f;
		line-height: 1.6;
		font-style: italic;
	}

	.scouting-context::before {
		content: '';
		position: absolute;
		top: -2px;
		left: -2px;
		right: -2px;
		bottom: -2px;
		background: linear-gradient(45deg, #f59e0b, #d97706, #b45309);
		border-radius: 14px;
		z-index: -1;
		opacity: 0.3;
	}
</style>
